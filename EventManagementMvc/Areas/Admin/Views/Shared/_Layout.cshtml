@using System.Security.Claims
@{
    Layout = null;
    ViewData["Title"] ??= "Admin";

    bool isAdmin = User.IsInRole("Admin");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-custom.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
</head>
<body>
    @if (!isAdmin)
    {
        <div class="container py-5">
            <div class="alert alert-danger">
                You are not authorized to access the Admin area.
            </div>
            <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">Return to Homepage</a>
        </div>
    }
    else
    {
        <div class="d-flex" style="min-height: 100vh;">
            <aside class="sidebar bg-dark text-white d-flex flex-column justify-content-between p-3" style="width: 250px;">
                <div>
                    <div class="logo d-flex align-items-center mb-4">
                        <img src="~/uploads/eventura.png" alt="Logo" style="width: 32px;" class="me-2" />
                        <span class="h5 mb-0">Admin Panel</span>
                    </div>

                    <nav class="nav flex-column">
                        <a class="nav-link text-white sidebar-link"
                           asp-area="Admin" asp-controller="Users" asp-action="Index">
                            <i class="bi bi-people me-2"></i> User Management
                        </a>

                        <a class="nav-link text-white sidebar-link"
                           asp-area="Admin" asp-controller="Events" asp-action="Index">
                            <i class="bi bi-calendar-event me-2"></i> Events
                        </a>

                        <a class="nav-link text-white sidebar-link"
                           asp-area="Admin" asp-controller="Categories" asp-action="Index">
                            <i class="bi bi-tags me-2"></i> Categories
                        </a>

                        <a class="nav-link text-white sidebar-link"
                           asp-area="Admin" asp-controller="Tickets" asp-action="Index">
                            <i class="bi bi-ticket-perforated me-2"></i> Tickets
                        </a>

                        <a class="nav-link text-white sidebar-link"
                           asp-area="Admin" asp-controller="Logs" asp-action="Index">
                            <i class="bi bi-journal-text me-2"></i> Logs
                        </a>
                    </nav>
                </div>

                <div class="mt-4">
                    <a asp-area="" asp-controller="Home" asp-action="Index"
                       class="text-white text-decoration-underline small">
                        Return to Homepage
                    </a>

                </div>
            </aside>

            <main class="flex-grow-1 p-4 bg-light">
                @RenderBody()
            </main>
        </div>
    }

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
