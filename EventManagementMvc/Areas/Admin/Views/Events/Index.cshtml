@model EventManagementMvc.Models.Event
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Admin - Events";

    var editingId = ViewBag.EditingId as int?;
    var events = ViewBag.Events as List<EventManagementMvc.Models.Event> ?? new();

    var categories = ViewBag.Categories as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
    var users = ViewBag.Users as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());

    int currentPage = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 6;
    int total = ViewBag.Total ?? 0;

    int totalPages = (int)Math.Ceiling(total / (double)pageSize);
    if (totalPages < 1) totalPages = 1;

    string Short(string? s, int max = 160)
    {
        s ??= "";
        s = s.Trim();
        if (s.Length <= max) return s;
        return s.Substring(0, max - 3) + "...";
    }
}

<div class="container mt-4">
    <h2 class="mb-3">@((editingId.HasValue) ? "Edit Event" : "Create New Event")</h2>

    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

    <form asp-action="Save" method="post" enctype="multipart/form-data" class="mb-5">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Event Name</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Date" class="form-label">Date</label>
            <input asp-for="Date" type="datetime-local" class="form-control" required
                   value="@(Model.Date == default ? "" : Model.Date.ToString("yyyy-MM-ddTHH:mm"))" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Location" class="form-label">Location</label>
            <input asp-for="Location" class="form-control" required />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select" asp-items="categories" required>
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Organizer</label>
            <select name="organizerId" class="form-select" asp-items="users" required>
                <option value="">Select Organizer</option>
            </select>
            <span class="text-danger">@Html.ValidationMessage("CreatedByUserId")</span>
        </div>

        <div class="mb-3">
            <label class="form-label">Event Image</label>
            <input type="file" name="imageFile" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
        </div>

        <div class="form-check mb-4">
            <input class="form-check-input" asp-for="IsActive" />
            <label class="form-check-label" asp-for="IsActive">Active</label>
        </div>

        <button type="submit" class="btn btn-primary">
            @((editingId.HasValue) ? "Update Event" : "Create Event")
        </button>

        @if (editingId.HasValue)
        {
            <a class="btn btn-secondary ms-2" asp-action="CancelEdit">Cancel</a>
        }
    </form>

    <hr />

    <h3 class="mb-3">All Events</h3>

@foreach (var ev in events)
{
        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h5 class="card-title mb-1">@ev.Name</h5>
                        <p class="card-text mb-2">@Short(ev.Description)</p>
                        <p class="card-text mb-2">
                            <small class="text-muted">@ev.Date.ToString("yyyy-MM-dd HH:mm") | @ev.Location</small>
                        </p>
                        <p class="card-text mb-0">
                            <small>Category: @(ev.Category?.Name ?? ev.CategoryId.ToString()) | Organizer ID: @ev.CreatedByUserId</small>
                        </p>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(ev.ImagePath))
                    {
                        <img src="@ev.ImagePath" class="rounded" style="width: 140px; height: 90px; object-fit: cover;" />
                    }
                </div>

                <div class="mt-3">
                    <a class="btn btn-sm btn-warning me-2"
                       asp-action="Index" asp-route-editingId="@ev.Id">Edit</a>

                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@ev.Id" />
                        <button class="btn btn-sm btn-danger" type="submit"
                                onclick="return confirm('Delete this event?');">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
}
    }

    <nav aria-label="Events pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-editingId="@(editingId ?? (int?)null)">
                    Previous
                </a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">Page @currentPage / @totalPages</span>
            </li>

            <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-editingId="@(editingId ?? (int?)null)">
                    Next
                </a>
            </li>
        </ul>
    </nav>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
