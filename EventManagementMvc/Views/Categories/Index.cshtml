@model IEnumerable<EventManagementMvc.Models.Category>

@{
    ViewData["Title"] = "Categories";

    int currentPage = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int total = ViewBag.Total ?? 0;

    string q = ViewBag.Q ?? "";
    string sort = ViewBag.Sort ?? "Name";
    string dir = ViewBag.Dir ?? "asc";

    int totalPages = (int)Math.Ceiling(total / (double)pageSize);
    if (totalPages < 1) totalPages = 1;

    string NextDir(string col) => (sort == col && dir == "asc") ? "desc" : "asc";
}

<h1>Categories</h1>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input name="q" class="form-control" placeholder="Search category name..."
               value="@q" />
    </div>

    <div class="col-md-3">
        <select name="pageSize" class="form-select">
            <option value="10" selected="@(pageSize == 10)">10</option>
            <option value="20" selected="@(pageSize == 20)">20</option>
            <option value="50" selected="@(pageSize == 50)">50</option>
        </select>
    </div>

    <div class="col-md-5">
        <div class="d-flex gap-2">
            <button class="btn btn-primary" type="submit">Filter</button>
            <a class="btn btn-outline-secondary"
               asp-action="Index"
               asp-route-page="1"
               asp-route-pageSize="@pageSize"
               asp-route-sort="@sort"
               asp-route-dir="@dir">Reset</a>
        </div>
    </div>
</form>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}


<p class="text-muted">
    Total: <strong>@total</strong> | Page <strong>@currentPage</strong> of <strong>@totalPages</strong>
</p>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-page="1"
                   asp-route-pageSize="@pageSize"
                   asp-route-q="@q"
                   asp-route-sort="Name"
                   asp-route-dir="@NextDir("Name")">
                    Name
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-page="1"
                   asp-route-pageSize="@pageSize"
                   asp-route-q="@q"
                   asp-route-sort="IsActive"
                   asp-route-dir="@NextDir("IsActive")">
                    IsActive
                </a>
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <text> | </text>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <text> | </text>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                        <text> | </text>
                        <form asp-action="ToggleActive" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-outline-warning" : "btn-outline-success")">
                                @(item.IsActive ? "Deactivate" : "Activate")
                            </button>
                        </form>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>

<nav aria-label="Categories pagination">
    <ul class="pagination">
        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(currentPage - 1)"
               asp-route-pageSize="@pageSize"
               asp-route-q="@q"
               asp-route-sort="@sort"
               asp-route-dir="@dir">Previous</a>
        </li>

        <li class="page-item disabled">
            <span class="page-link">Page @currentPage / @totalPages</span>
        </li>

        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(currentPage + 1)"
               asp-route-pageSize="@pageSize"
               asp-route-q="@q"
               asp-route-sort="@sort"
               asp-route-dir="@dir">Next</a>
        </li>
    </ul>
</nav>
