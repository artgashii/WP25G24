@model IEnumerable<EventManagementMvc.Models.Ticket>

@{
    ViewData["Title"] = "Tickets";

    int currentPage = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int total = ViewBag.Total ?? 0;

    int eventId = ViewBag.EventId ?? 0;
    bool activeOnly = ViewBag.ActiveOnly ?? false;

    string sort = ViewBag.Sort ?? "Id";
    string dir = ViewBag.Dir ?? "asc";

    int totalPages = (int)Math.Ceiling(total / (double)pageSize);
    if (totalPages < 1) totalPages = 1;

    string NextDir(string col) => (sort == col && dir == "asc") ? "desc" : "asc";

    var events = ViewBag.Events as List<EventManagementMvc.Models.Event> ?? new();
}

<h1>Tickets</h1>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <select name="eventId" class="form-select">
            <option value="0">All events</option>
            @foreach (var e in events)
            {
                <option value="@e.Id" selected="@(e.Id == eventId)">@e.Name</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <select name="pageSize" class="form-select">
            <option value="10" selected="@(pageSize == 10)">10</option>
            <option value="20" selected="@(pageSize == 20)">20</option>
            <option value="50" selected="@(pageSize == 50)">50</option>
        </select>
    </div>

    <div class="col-md-2 d-flex align-items-center">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="activeOnly" name="activeOnly" value="true"
                   @(activeOnly ? "checked" : "") />
            <label class="form-check-label" for="activeOnly">Active only</label>
        </div>
    </div>

    <div class="col-md-3">
        <div class="d-flex gap-2">
            <button class="btn btn-primary" type="submit">Filter</button>
            <a class="btn btn-outline-secondary"
               asp-action="Index"
               asp-route-page="1"
               asp-route-pageSize="@pageSize"
               asp-route-sort="@sort"
               asp-route-dir="@dir">Reset</a>
        </div>
    </div>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p class="text-muted">
    Total: <strong>@total</strong> | Page <strong>@currentPage</strong> of <strong>@totalPages</strong>
</p>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-page="1"
                   asp-route-pageSize="@pageSize"
                   asp-route-eventId="@eventId"
                   asp-route-activeOnly="@(activeOnly ? "true" : null)"
                   asp-route-sort="Id"
                   asp-route-dir="@NextDir("Id")">Id</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-page="1"
                   asp-route-pageSize="@pageSize"
                   asp-route-eventId="@eventId"
                   asp-route-activeOnly="@(activeOnly ? "true" : null)"
                   asp-route-sort="Event"
                   asp-route-dir="@NextDir("Event")">Event</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-page="1"
                   asp-route-pageSize="@pageSize"
                   asp-route-eventId="@eventId"
                   asp-route-activeOnly="@(activeOnly ? "true" : null)"
                   asp-route-sort="Price"
                   asp-route-dir="@NextDir("Price")">Price</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-page="1"
                   asp-route-pageSize="@pageSize"
                   asp-route-eventId="@eventId"
                   asp-route-activeOnly="@(activeOnly ? "true" : null)"
                   asp-route-sort="Status"
                   asp-route-dir="@NextDir("Status")">Status</a>
            </th>
            <th>PurchasedByUserId</th>
            <th>
                <a asp-action="Index"
                   asp-route-page="1"
                   asp-route-pageSize="@pageSize"
                   asp-route-eventId="@eventId"
                   asp-route-activeOnly="@(activeOnly ? "true" : null)"
                   asp-route-sort="IsActive"
                   asp-route-dir="@NextDir("IsActive")">IsActive</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@(item.Event?.Name)</td>
                <td>@item.Price</td>
                <td>@item.Status</td>
                <td>@(item.PurchasedByUserId ?? "-")</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Tickets pagination">
    <ul class="pagination">
        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(currentPage - 1)"
               asp-route-pageSize="@pageSize"
               asp-route-eventId="@eventId"
               asp-route-activeOnly="@(activeOnly ? "true" : null)"
               asp-route-sort="@sort"
               asp-route-dir="@dir">Previous</a>
        </li>

        <li class="page-item disabled">
            <span class="page-link">Page @currentPage / @totalPages</span>
        </li>

        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(currentPage + 1)"
               asp-route-pageSize="@pageSize"
               asp-route-eventId="@eventId"
               asp-route-activeOnly="@(activeOnly ? "true" : null)"
               asp-route-sort="@sort"
               asp-route-dir="@dir">Next</a>
        </li>
    </ul>
</nav>
