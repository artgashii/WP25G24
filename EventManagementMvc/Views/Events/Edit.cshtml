@model EventManagementMvc.Models.Event

@{
    ViewData["Title"] = "Edit Event";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Edit Event</h1>
    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Date" class="form-label"></label>
                            <input asp-for="Date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Location" class="form-label"></label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="mb-3">
                        <label class="form-label">Current Image</label>

                        @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
                        {
                            <div class="mb-2">
                                <img src="@Model.ImagePath"
                                     class="img-fluid rounded shadow-sm"
                                     style="max-height:220px; width:100%; object-fit:cover;" />
                            </div>
                        }
                        else
                        {
                            <div class="text-muted small mb-2">No image uploaded yet.</div>
                        }

                        <label class="form-label">Upload New Image</label>
                        <input type="file" name="imageFile" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    @if (isAdmin)
                    {
                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive"></label>
                        </div>
                    }
                    else
                    {
                        <input type="hidden" asp-for="IsActive" />
                    }

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
