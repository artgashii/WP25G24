@using System.Security.Claims
@model EventManagementMvc.Models.Event

@{
    ViewData["Title"] = "Event Details";

    bool isAdmin = User.IsInRole("Admin");
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    bool canEdit = isAdmin || (!string.IsNullOrEmpty(currentUserId) && Model.CreatedByUserId == currentUserId);

    string img = string.IsNullOrWhiteSpace(Model.ImagePath) ? "/uploads/eventura.png" : Model.ImagePath;
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="@img"
                     class="img-fluid rounded-start h-100 w-100 object-fit-cover"
                     style="object-fit:cover; min-height:320px;"
                     alt="@Model.Name" />
            </div>

            <div class="col-md-7">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start gap-3">
                        <div>
                            <h2 class="card-title text-primary mb-2">@Model.Name</h2>

                            <p class="card-text mb-1">
                                <i class="bi bi-calendar-event me-2"></i>
                                <strong>Date:</strong> @Model.Date.ToString("MMM dd, yyyy HH:mm")
                            </p>

                            <p class="card-text mb-2">
                                <i class="bi bi-geo-alt me-2"></i>
                                <strong>Location:</strong> @Model.Location
                            </p>

                            <div class="mb-2">
                                <span class="badge text-bg-secondary">
                                    @(Model.Category?.Name ?? "Uncategorized")
                                </span>

                                @if (isAdmin)
                                {
                                    <span class="badge ms-2 @(Model.IsActive ? "text-bg-success" : "text-bg-secondary")">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="d-flex flex-column gap-2">
                            <a class="btn btn-outline-secondary" asp-action="Index">Back</a>

                            @if (canEdit)
                            {
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                            }

                            @if (isAdmin)
                            {
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                            }
                        </div>
                    </div>

                    <hr />

                    <h5 class="mt-3">Description</h5>
                    <p class="card-text">@Model.Description</p>

                    <div class="mt-4 text-center">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <form method="post" asp-controller="Tickets" asp-action="Buy" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="eventId" value="@Model.Id" />
                                <button class="btn btn-success" type="submit">
                                    Buy Ticket - $10
                                </button>
                            </form>

                            @if (TempData["TicketSuccess"] != null)
                            {
                                <div class="alert alert-success mt-3">@TempData["TicketSuccess"]</div>
                            }
                            @if (TempData["TicketError"] != null)
                            {
                                <div class="alert alert-danger mt-3">@TempData["TicketError"]</div>
                            }
                        }
                        else
                        {
                            <a class="btn btn-success"
                               asp-area="Identity" asp-page="/Account/Login">
                                Log in to buy a ticket
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
