@using System.Security.Claims
@model IEnumerable<EventManagementMvc.Models.Event>

@{
    ViewData["Title"] = "Event Gallery";

    int currentPage = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 12;
    int total = ViewBag.Total ?? 0;

    string q = ViewBag.Q ?? "";
    int categoryId = ViewBag.CategoryId ?? 0;
    bool activeOnly = ViewBag.ActiveOnly ?? false;

    string sort = ViewBag.Sort ?? "Date";
    string dir = ViewBag.Dir ?? "asc";

    int totalPages = (int)Math.Ceiling(total / (double)pageSize);
    if (totalPages < 1) totalPages = 1;

    var categories = ViewBag.Categories as List<EventManagementMvc.Models.Category> ?? new();

    bool isAdmin = User.IsInRole("Admin");
    bool isLoggedIn = User.Identity?.IsAuthenticated ?? false;

    string Short(string? s, int max = 120)
    {
        s ??= "";
        s = s.Trim();
        if (s.Length <= max) return s;
        return s.Substring(0, max - 3) + "...";
    }
}

<section class="py-5 bg-light rounded-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold m-0 text-center w-100">Event Gallery</h2>

            @if (isLoggedIn)
            {
                <a class="btn btn-primary ms-3" asp-action="Create">Create</a>
            }
        </div>

        <form method="get" class="mb-4 text-center">
            <input type="hidden" name="page" value="1" />
            <input type="hidden" name="pageSize" value="@pageSize" />
            <input type="hidden" name="sort" value="@sort" />
            <input type="hidden" name="dir" value="@dir" />

            <div class="row g-2 justify-content-center align-items-end">
                <div class="col-12 col-md-4">
                    <label class="form-label fw-semibold">Search</label>
                    <input name="q" class="form-control" placeholder="Search name/description..." value="@q" />
                </div>

                <div class="col-12 col-md-3">
                    <label for="categoryFilter" class="form-label fw-semibold">Filter by Category</label>
                    <select id="categoryFilter" name="categoryId" class="form-select">
                        <option value="0">All Categories</option>
                        @foreach (var c in categories)
                        {
                            <option value="@c.Id" selected="@(c.Id == categoryId)">@c.Name</option>
                        }
                    </select>
                </div>

                @if (isAdmin)
                {
                    <div class="col-12 col-md-2 text-start">
                        <div class="form-check mt-4">
                            <input class="form-check-input" type="checkbox" id="activeOnly" name="activeOnly" value="true"
                                   @(activeOnly ? "checked" : "") />
                            <label class="form-check-label fw-semibold" for="activeOnly">Active only</label>
                        </div>
                    </div>
                }

                <div class="col-12 col-md-2 d-flex gap-2 justify-content-center">
                    <button class="btn btn-primary w-100" type="submit">Apply</button>
                    <a class="btn btn-outline-secondary w-100"
                       asp-action="Index"
                       asp-route-page="1"
                       asp-route-pageSize="@pageSize"
                       asp-route-sort="@sort"
                       asp-route-dir="@dir">Reset</a>
                </div>
            </div>
        </form>

        <div class="text-center text-muted mb-4">
            Total: <strong>@total</strong> | Page <strong>@currentPage</strong> of <strong>@totalPages</strong>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-secondary text-center mb-0">No events found.</div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var ev in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <a class="text-decoration-none text-dark"
                           asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id">
                            <div class="card h-100 shadow-sm">
                                <img src="@(string.IsNullOrWhiteSpace(ev.ImagePath) ? "/uploads/eventura.png" : ev.ImagePath)"
                                     alt="@ev.Name"
                                     class="card-img-top event-card-img" />
                                <div class="card-body">
                                    <h5 class="card-title">@ev.Name</h5>
                                    <p class="card-text text-muted mb-2">@ev.Date.ToString("MMM dd, yyyy")</p>
                                    <p class="card-text">@Short(ev.Description)</p>
                                    <p class="card-text">
                                        <small class="text-muted">@ev.Location</small>
                                    </p>

                                    <span class="badge text-bg-secondary">
                                        @(ev.Category?.Name ?? "Uncategorized")
                                    </span>

                                    @if (isAdmin)
                                    {
                                        <span class="badge ms-2 @(ev.IsActive ? "text-bg-success" : "text-bg-secondary")">
                                            @(ev.IsActive ? "Active" : "Inactive")
                                        </span>
                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>

            <nav class="mt-4" aria-label="Events pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(currentPage - 1)"
                           asp-route-pageSize="@pageSize"
                           asp-route-q="@q"
                           asp-route-categoryId="@categoryId"
                           asp-route-activeOnly="@(isAdmin && activeOnly ? "true" : null)"
                           asp-route-sort="@sort"
                           asp-route-dir="@dir">Previous</a>
                    </li>

                    <li class="page-item disabled">
                        <span class="page-link">Page @currentPage / @totalPages</span>
                    </li>

                    <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(currentPage + 1)"
                           asp-route-pageSize="@pageSize"
                           asp-route-q="@q"
                           asp-route-categoryId="@categoryId"
                           asp-route-activeOnly="@(isAdmin && activeOnly ? "true" : null)"
                           asp-route-sort="@sort"
                           asp-route-dir="@dir">Next</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</section>
