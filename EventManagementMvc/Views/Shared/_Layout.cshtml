<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventManagementMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventManagementMvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-custom.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        @using System.Security.Claims
        @{
            bool isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
            bool isAdmin = User.IsInRole("Admin");
        }

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/uploads/eventura.png" alt="Company Logo" width="40" height="40"
                         class="d-inline-block align-text-top me-2" />
                    <span class="logo-text">Eventura</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Events" asp-action="Index">Event gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="contact">Contact</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        @if (isAdmin)
                        {
                            <a class="btn btn-outline-danger" asp-area="Admin" asp-controller="Users" asp-action="Index">
                                Admin Panel
                            </a>
                        }

                        @if (isAuthenticated)
                        {
                            <a class="btn btn-outline-success" asp-controller="Tickets" asp-action="Index">
                                My Tickets
                            </a>

                            <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Account/Manage/Index">
                                Edit Profile
                            </a>

                            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-primary">Log Out</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">
                                Log In
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main class="container py-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-3 mt-auto">
        <div class="container small text-muted d-flex justify-content-between">
            <span>Eventura</span>
            <span>&copy; @DateTime.Now.Year</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
